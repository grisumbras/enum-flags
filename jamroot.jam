import modules ;
import b2/install-extra : install ;


project enum-flags ;


constant VERSION : 0.1.0 ;


alias libs : usage-requirements <include>include ;


local headers
  = [ install (includedir)
    : [ glob-tree-ex include : *.hpp ]
    : <install-source-root>include
    ] ;

alias install
  : exports//install
    $(headers)
    [ install (docdir) : LICENSE ]
  ;
explicit install ;
